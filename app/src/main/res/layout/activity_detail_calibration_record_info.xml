<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#EFEFF4"
tools:context="com.ff161224.cc_commander.shareplatform.main.orderReview.timeOrder.TimeOrderChooseTimeActivity">

<!-- 标题 -->
<LinearLayout
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/logo111"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tittle_calibration_record_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="校准记录详细信息"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tittle_calibration_record_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:text="编辑"
        android:layout_weight="1"/>
</LinearLayout>

<ScrollView
    android:id="@+id/index_fragment_scrollView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 校准日期 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:gravity="left">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="校准日期："
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/calibration_record_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016年5月16日"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 分割线 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!-- 整数编号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="证书编号："
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/calibration_record_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No.1592778"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 分割线 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!-- 校准有效期 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="校准有效期："
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/calibration_record_effictive_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019年5月16日"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <!-- *****************************************分割线******************************************** -->

        <!-- 判定结果 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="判定结果："
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/calibration_record_result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合格"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 分割线 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!-- 校验单位 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="校验单位："
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/calibration_record_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国科学院"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 分割线 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!-- 备注 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="备注："
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/calibration_record_note_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目前暂无备注信息"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>
