<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 校准记录TextView -->
    <!-- 校准记录编号TextView -->
    <TextView
        android:id="@+id/calibration_record_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:paddingTop="5dp"
        android:text="1、"
        android:textSize="16dp"
        android:layout_marginLeft="5dp" />

    <!-- 校准记录基本信息线性布局 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <!-- 校准记录日期 -->
        <TextView
            android:id="@+id/calibration_record_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="校准日期：2017年5月16日"/>
        <!-- 校准记录日期 -->

        <!-- 证书编号 -->
        <TextView
            android:id="@+id/calibration_record_no_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="证书编号：No.1592778"/>
        <!-- 证书编号 -->

        <!-- 校准记录有效期 -->
        <TextView
            android:id="@+id/calibration_record_effective_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="校准记录有效期：2019年5月16日"/>
        <!-- 校准记录有效期 -->

    </LinearLayout>
    <!-- 校准记录基本信息线性布局 -->

</LinearLayout>