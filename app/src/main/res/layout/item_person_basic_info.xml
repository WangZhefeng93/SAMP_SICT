<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 创建人编号TextView -->
    <TextView
        android:id="@+id/person_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:paddingTop="5dp"
        android:text="1、"
        android:textSize="16dp"
        android:layout_marginLeft="5dp" />
    <!-- 创建人编号TextView -->

    <!-- 创建人基本信息线性布局 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <!-- 创建人用户名 -->
        <TextView
            android:id="@+id/person_username_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="创建人用户名：nigcqcao"/>
        <!-- 创建人用户名 -->

        <!-- 创建人姓名 -->
        <TextView
            android:id="@+id/person_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="创建人姓名：曹长群"/>
        <!-- 创建人姓名 -->

        <!-- 电话 -->
        <TextView
            android:id="@+id/person_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="电话：1513295960"/>
        <!-- 电话 -->

        <!-- 邮箱 -->
        <TextView
            android:id="@+id/person_mail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="邮箱：cqcao@nigpas.ac.cn"/>
        <!-- 邮箱 -->

        <!-- 所属单位 -->
        <TextView
            android:id="@+id/person_unit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="所属单位：南京地质古生物研究所"/>
        <!-- 所属单位 -->

        <!-- 所属研究组 -->
        <TextView
            android:id="@+id/person_group_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="所属研究组：曹长群课题组"/>
        <!-- 所属研究组 -->

    </LinearLayout>
    <!-- 仪器基本信息线性布局 -->

</LinearLayout>